{
  "id": "vigil",
  "name": "Vigil",
  "description": "Self-hosted control panel plugin for OpenClaw. Automatic activity logging, task management, credential approval, cost tracking, and real-time status monitoring â€” enforced at infrastructure level.",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiUrl": {
        "type": "string",
        "description": "Vigil API base URL"
      },
      "apiKey": {
        "type": "string",
        "description": "API key for authenticating with the Control Panel"
      },
      "autoLog": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "toolCalls": { "type": "boolean" },
          "execCommands": { "type": "boolean" },
          "sessionEvents": { "type": "boolean" },
          "messageSends": { "type": "boolean" }
        }
      },
      "batchIntervalMs": {
        "type": "integer",
        "minimum": 1000,
        "maximum": 30000,
        "description": "How often to flush batched events to the API"
      }
    }
  },
  "uiHints": {
    "apiUrl": { "label": "Vigil API URL", "placeholder": "http://localhost:5263" },
    "apiKey": { "label": "Vigil API Key", "sensitive": true },
    "autoLog.toolCalls": { "label": "Auto-log Tool Calls" },
    "autoLog.execCommands": { "label": "Auto-log Exec Commands" },
    "autoLog.sessionEvents": { "label": "Auto-log Session Events" },
    "autoLog.messageSends": { "label": "Auto-log Message Sends" }
  }
}
