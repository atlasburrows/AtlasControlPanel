    [JSInvokable]
    public async Task NavigateFromRadial(string href)
    {
        if (href == "/logout")
        {
            await JS.InvokeVoidAsync("atlasAuth.logout");
            return;
        }
        Nav.NavigateTo(href);
    }

    public async ValueTask DisposeAsync()
    {
        _dotnetRef?.Dispose();
    }
}
