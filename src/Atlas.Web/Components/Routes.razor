@using Microsoft.AspNetCore.Components.Authorization

<Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(Atlas.Shared.SharedAssemblyMarker).Assembly }">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Atlas.Shared.Layout.MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(Atlas.Shared.Layout.MainLayout)">
            <MudText Typo="Typo.h4" Class="mt-8" Align="Align.Center">Page not found</MudText>
        </LayoutView>
    </NotFound>
</Router>
