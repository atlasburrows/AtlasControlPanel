<Router AppAssembly="typeof(MauiProgram).Assembly" AdditionalAssemblies="new[] { typeof(Atlas.Shared.SharedAssemblyMarker).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Atlas.Shared.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(Atlas.Shared.Layout.MainLayout)">
            <MudText Typo="Typo.h4" Class="mt-8" Align="Align.Center">Page not found</MudText>
        </LayoutView>
    </NotFound>
</Router>
